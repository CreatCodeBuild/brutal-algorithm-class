{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"strict": true,
		"noImplicitAny": false,
		"noEmit": true,
		"allowJs": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"skipLibCheck": true,
		"downlevelIteration": true,
		"paths": {
		  "~/*": ["./*"]
		},
		"typeRoots": [
			"node_modules/@types",
			"node_module/phaser/types"
		],
		"types": [
			"phaser"
		],
        "lib": [
            "ES2015",
			"DOM",
			"ES2018.AsyncIterable"
        ]
	},
	"include": [
		"src/**/*"
	]
}
